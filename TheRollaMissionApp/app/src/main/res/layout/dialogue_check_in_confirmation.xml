<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="patron"
            type="com.project.therollamissionapp.data.Patron" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/small_margin"
        android:paddingStart="@dimen/small_margin"
        android:paddingEnd="@dimen/small_margin" >

        <ImageView
            android:id="@+id/image_patron"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            loadPatronImage="@{patron.id}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:text="@{String.format(`%s %s %s`, @string/checkin_as, patron.firstName, patron.lastName)}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_patron"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="You are about to check in as Tim Heidecker" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>