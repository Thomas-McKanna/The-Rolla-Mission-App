<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5B5B5">

    <TextView
        android:id="@+id/text"
        android:layout_width="678dp"
        android:layout_height="119dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Welcome to the Rolla Mission!"
        android:textColor="#000000"
        android:textSize="50sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="331dp"
        android:layout_height="122dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="267dp"
        android:layout_marginTop="176dp"
        android:text="Check In"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="314dp"
        android:layout_marginBottom="580dp"
        android:text="First time here?"
        android:textColor="#020202"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="532dp"
        android:text="Click the button below to register"
        android:textColor="#000000"
        android:textSize="36sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="330dp"
        android:layout_height="112dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="271dp"
        android:layout_marginBottom="355dp"
        android:text="Register Here"
        android:textSize="36sp" />


</RelativeLayout>
