<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable
            name="viewmodel"
            type="com.project.therollamissionapp.ui.registration.RegistrationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/take_picture_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/picture_instructions"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            android:paddingLeft="@dimen/large_margin"
            android:paddingRight="@dimen/large_margin"
            android:visibility="@{viewmodel.imageUri == null ? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/take_picture_button" />

        <Button
            android:id="@+id/take_picture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/take_picture_button"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"
            android:textAlignment="center"
            android:onClick="@{() -> viewmodel.takeImage()}"
            android:visibility="@{viewmodel.imageUri == null ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/take_picture_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:visibility="@{viewmodel.imageUri != null ? View.VISIBLE : View.GONE}"
            previewPatronImage="@{viewmodel.imageUri}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/text_post_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="@{viewmodel.imageUri != null ? View.VISIBLE : View.GONE}"
            android:layout_marginTop="@dimen/medium_margin"
            android:text="@string/post_picture_instructions"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_preview"
            tools:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewmodel.imageUri != null ? View.VISIBLE : View.GONE}"
            android:layout_marginTop="@dimen/medium_margin"
            android:text="@string/take_picture_again"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"
            android:onClick="@{() -> viewmodel.takeImage()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_post_picture"
            tools:visibility="invisible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
