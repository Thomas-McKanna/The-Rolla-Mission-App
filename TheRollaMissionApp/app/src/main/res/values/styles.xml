<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RegistrationTextStyle</item>
        <item name="errorTextAppearance">@style/RegistrationEditTextStyle</item>
        <item name="textAppearanceButton">@style/RegistrationButtonStyle</item>
        <item name="radioButtonStyle">@style/RegistrationRadioStyle</item>
        <item name="checkboxStyle">@style/RegistrationCheckboxStyle</item>
    </style>

    <style name="RegistrationTextStyle" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RegistrationEditTextStyle" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="RegistrationButtonStyle" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RegistrationRadioStyle" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RegistrationCheckboxStyle" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Dialog.LargeTitle" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
    </style>

    <style name="DialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
